<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Validador de Cartão</title>

    <!-- Bootstrap CSS via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

    <!-- Estilos customizados -->
    <style>
        .fade {
            transition: opacity 0.5s ease-in-out;
            opacity: 0;
        }

            .fade.show {
                opacity: 1;
            }
    </style>
</head>
<body class="bg-light">
    <div class="min-vh-100 d-flex flex-column">
        <main class="flex-fill">
            @RenderBody()
        </main>
        <footer class="bg-dark text-white text-center py-3 mt-auto">
            <small>Validador de Cartão • .NET 9 • Clean Architecture • 2025</small>
        </footer>
    </div>

    <!-- Bootstrap JS via CDN (bundle inclui Popper.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script customizado para auto-dismiss dos alerts -->
    <script src="~/js/alert-auto-dismiss.js"></script>

    <!-- Seção de scripts específicos da página -->
    @RenderSection("Scripts", required: false)
</body>
</html>
