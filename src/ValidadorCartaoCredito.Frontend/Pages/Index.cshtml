@page
@model ValidadorCartaoCredito.Frontend.Pages.IndexModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Validador de Cartão de Crédito";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">Validador de Cartão</h2>
                </div>

                <div class="card-body">
                    <form method="post">
                        <div class="mb-4">
                            <label class="form-label fw-bold">Número do Cartão</label>
                            <input type="text"
                                   asp-for="NumeroCartao"
                                   class="form-control form-control-lg text-center"
                                   placeholder="4111 1111 1111 1111"
                                   maxlength="19" />
                            <small class="text-muted">Use números gerados no 4devs</small>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg" disabled="@Model.IsProcessing">
                                @(Model.IsProcessing ? "Validando cartão..." : "Validar cartão")
                            </button>

                            @if (Model.IsProcessing)
                            {
                                <div class="text-center mt-3 fade show">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Validando...</span>
                                    </div>
                                    <p class="mt-2 text-info">Validando cartão, aguarde...</p>
                                </div>
                            }
                            else if (!string.IsNullOrEmpty(Model.StatusMessage))
                            {
                                <partial name="_Alert" model="Model.AlertModel" />
                            }
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center text-muted small">
                    Projeto didático • .NET 9 • Clean Architecture • Docker Ready
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Se necessário re-inicializar após postbacks dinâmicos:
        if (window.initAutoDismissAlerts) {
            window.initAutoDismissAlerts();
        }

        document.addEventListener('DOMContentLoaded', function () {
          var form = document.querySelector('form[method="post"]');
          if (!form) return;
          form.addEventListener('submit', function () {
            var btn = form.querySelector('button[type="submit"]');
            if (btn) {
              btn.disabled = true;
              btn.textContent = 'Validando cartão...';
            }
          });
        });
    </script>
}
